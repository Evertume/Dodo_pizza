<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/linearLayout"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/image_view_pizza"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pizza_image" />


        <!-- TextView for Pizza Name -->
        <TextView
            android:id="@+id/text_view_pizza_name"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="Pizza Name"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- TextView for Pizza Description -->
        <TextView
            android:id="@+id/text_view_pizza_description"
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:text="Pizza Description" />

        <Button

            android:id="@+id/registerbutton"

            android:layout_width="match_parent"

            android:layout_height="64dp"

            android:text="Add to cart"

            android:textSize="24sp">

        </Button>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>